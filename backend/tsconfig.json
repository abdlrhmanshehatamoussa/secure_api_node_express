{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": false,
      "target": "es6",
      "noImplicitAny": true,
      "emitDecoratorMetadata": false,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/",
          "src/types/*"
        ]
      }
    },
    "include": [
      "src/**/*.*",
    ]
  }